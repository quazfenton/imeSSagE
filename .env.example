# LLM Messaging Service Environment Variables

# Application Configuration
APP_NAME=LLM-Messaging-Service
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO
CONTACTS_DB_PATH=contacts.db
ENABLE_METRICS=true
ENABLE_TRACING=false

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=messaging_service
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_ECHO=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_TIMEOUT=30
REDIS_MAX_CONNECTIONS=20

# SMTP Configuration (for email sending)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_TIMEOUT=30

# LLM Configuration (OpenAI)
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=200
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3

# Android Gateway Configuration
ANDROID_WS_TIMEOUT=30
ANDROID_QUEUE_TIMEOUT=60
ANDROID_MAX_CONNECTIONS=10

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_LOG_LEVEL=INFO
API_REQUEST_TIMEOUT=30
API_MAX_REQUEST_SIZE=1048576

# Security Configuration
SECRET_KEY=your_secret_key_here_must_be_32_chars_or_longer
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600